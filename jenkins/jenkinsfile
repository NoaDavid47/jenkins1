pipeline {
  agent any
  stages {

    stage('build'){
      steps {
        sh 'echo $USER'        
        sh 'sudo  docker run demo-image:latest --name noad'
      }
    }

      stage(test){
        steps {
          sh ''
        }
      }

      stage(deploy){
        steps {
          sh ''
}
        }
      }  
post { 
        always { 
            sh ' echo " removing docker " '
           sh ' sudo docker rm -f noad '
        }
    }  
}
